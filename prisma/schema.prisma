// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String          @id @default(auto()) @map("_id") @db.ObjectId
  email        String          @unique
  password     String
  username     String          @unique
  name         String?
  surname      String?
  description  String?
  creationDate DateTime        @default(now())
  lastUpdate   DateTime        @updatedAt
  Post         Post[]
  userSender   FriendRequest[] @relation("userSender")
  userReceiver FriendRequest[] @relation("userReceiver")
  friends      String[]        @db.ObjectId
}

model FriendRequest {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  accepted   Boolean @default(false)
  senderId   String  @db.ObjectId
  sender     User    @relation("userSender", fields: [senderId], references: [id])
  receiverId String  @db.ObjectId
  receiver   User    @relation("userReceiver", fields: [receiverId], references: [id])
}

model Post {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  likes        Int?        @default(0)
  shares       Int?        @default(0)
  creationDate DateTime    @default(now())
  lastUpdate   DateTime    @updatedAt
  deletedOn    DateTime?
  user         User        @relation(fields: [userId], references: [id])
  userId       String      @db.ObjectId
  postComments String[]    @default([])
  PostMedia    PostMedia[]
  visibility   String      @default("public")
}

model PostMedia {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  post   Post   @relation(fields: [postId], references: [id])
  postId String @db.ObjectId
  type   String
  name   String
  url    String
}
